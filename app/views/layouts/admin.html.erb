<!DOCTYPE html>
<html>
<head>
  <title>Bookworm</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <header> 
          <%= render 'layouts/navbar' %>
        </header>
      </div>
    </div>
  </div>
  <div class="flash-messages">
    <p><%= alert %></p>
    <p><%= notice %></p>
  </div>
<%= yield %>

</body>
</html>
