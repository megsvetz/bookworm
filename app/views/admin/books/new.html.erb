<h1>Add New Book</h1>

<%= form_for(@book, url: admin_books_path) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <br>
  <%= f.label :summary %>
  <%= f.text_area :summary %>
  <br>
  <%= f.submit("Save New Book") %>
  <br>

<% end %>
